%{
#include <stdio.h>
#include <string.h>

int max_len = 0;
char longest_word[100];
%}

%%

[a-zA-Z]+    {
                if (strlen(yytext) > max_len) {
                    max_len = strlen(yytext);
                    strcpy(longest_word, yytext);
                }
              }

%%

int main()
{
    yylex();
    printf("Longest word: %s\n", longest_word);
    printf("Length: %d\n", max_len);
    return 0;
}

int yywrap()
{
    return 1;
}
